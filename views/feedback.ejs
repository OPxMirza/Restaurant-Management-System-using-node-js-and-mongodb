<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <title>Restaurant Hub</title>
</head>

<body>

    <div class="admin-container">
        <button id="sidebarToggle" class="sidebar-toggle">â˜°</button>
        <div class="sidebar">
            <h2>Admin Panel</h2>
            <ul>
                <li><a href="/adminPanel">Dashboard</a></li>
                <!-- <li><a href="/orderHistory">Orders</a></li> -->
                <li><a href="/reservationHistory">Reservations</a></li>
                <!-- <li><a href="/inventory">Inventory</a></li> -->
                <li><a href="/staff">Staff</a></li>
                <li><a href="/feedback" class="active">Feedback</a></li>
                <li><a href="/">Logout</a></li>
            </ul>
        </div>
        <div class="feedback-container">
            <h1>Feedback</h1>

            <!-- Feedback Cards - dynamically generated from MongoDB -->
            <% feedbacks.forEach(feedback=> { %>
                <div class="feedback-card">
                    <div class="feedback-card-header">
                        <h3>
                            <%= feedback.name %>
                        </h3>
                    </div>
                    <div class="feedback-card-body">
                        <p>
                            <%= feedback.feedback %>
                        </p>
                    </div>
                    <div class="feedback-card-footer">
                        <i class="far fa-calendar-alt"></i> Date: <%= feedback.date.toDateString() %>
                    </div>
                </div>
                <% }); %>

        </div>
    </div>

    <script src="/js/script.js"></script>

</body>

</html>